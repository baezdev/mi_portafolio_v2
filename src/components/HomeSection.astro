---
import Container from "./Container.astro";
---

<Container>
  <main class="flex items-center h-screen">
    <h1
      class="mx-auto font-bold text-center text-8xl bg-gradient-to-r from-[rgba(136,115,239,1)] via-[rgba(197,186,247,1)] to-[rgba(255,255,255,1)] bg-clip-text text-transparent"
    >
      Angel Baez <br />
      <span class="text-white">Desarrollador Web</span>
      <br /> FrontEnd
    </h1>
    <div id="circle-container" class="absolute w-5/6 h-full">
      <span class="absolute left-0 w-16 h-16 bg-white rounded-full top-40"
      ></span>
      <span class="absolute bg-white rounded-full right-28 w-11 h-11 top-60"
      ></span>
      <span class="absolute w-5 h-5 bg-white rounded-full bottom-28 right-56"
      ></span>
    </div>
  </main>
</Container>

<script>
  const $ = (selector: string) => document.querySelector(selector);

  const main = $("main");
  main?.addEventListener("mousemove", (e) => {
    console.log(e);
  });
</script>
